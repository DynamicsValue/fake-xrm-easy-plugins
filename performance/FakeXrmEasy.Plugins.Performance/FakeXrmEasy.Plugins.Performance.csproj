    <PackageReference Include="FakeXrmEasy.Core.v365" Version="[2.4.1-*,3.0)" />
    <PackageReference Include="FakeXrmEasy.Plugins.v365" Version="[2.4.0-*,3.0)" />
  </ItemGroup>
  <ItemGroup Condition="'$(PackTests)' == 'true' And '$(Configuration)'=='FAKE_XRM_EASY_9'">
